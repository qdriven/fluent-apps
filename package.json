{
  "name": "fluentapp",
  "description": "Fluent App collections",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "docs": "doctoc --title '**Table of content**' README.md",
    "clean": "pnpm run -r clean",
    "build": "pnpm run -r build",
    "test": "pnpm run -r test",
    "lint": "eslint --ext js,ts,tsx ."
  },
  "devDependencies": {
    "doctoc": "~2.2.1",
    "eslint": "~8.54.0",
    "eslint-plugin-import": "~2.29.0",
    "typescript": "~5.3.2"
  }
}
